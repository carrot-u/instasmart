<%=  form_for [@question, @answer] do |f| %>
<div class="field">
  <%= f.label :user %><br />
  <%= f.collection_select :user_id, User.order(:first_name), :id, :full_name,  include_blank: true %>
</div>
<div class="field">
  <%= f.label :your_answer %><br />
  <%= f.text_area :body %>
</div>
<div>
  <%= f.submit %>
</div>
<% end %>
